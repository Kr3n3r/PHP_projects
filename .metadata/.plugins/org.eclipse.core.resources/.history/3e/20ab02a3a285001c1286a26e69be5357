$query = "select distinct film.film_id, film.title, inventory.inventory_id 
from film,inventory,rental 
where film.film_id = inventory.inventory_id 
and inventory.inventory_id = rental.inventory_id 
and rental.return_date is not null 
and film.film_id=$film_id";


if ($stmt = $con->prepare($query)) {
    $stmt->execute();
    $stmt->bind_result($film_id_available, $title, $inventory_id);
